<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ivay.ivay_repository.dao.master.RoleDao">

    <sql id="list_condition">
        <where>
            <if test="params.name != null and params.name != ''">
                and t.name like concat('%', #{params.name}, '%')
            </if>
            <if test="params.role != null and params.role != ''">
                AND CASE #{params.role}
                    WHEN 'admin' THEN 1=1
                    WHEN 'ovayAdmin' THEN t.name in ('ovayAdmin','ovayAudit')
                    WHEN 'ovayAudit' THEN t.name='ovayAudit'
                END
            </if>
        </where>
    </sql>

    <select id="count" resultType="int">
        select count(1) from sys_role t
        <include refid="list_condition"/>
    </select>

    <select id="list" resultType="com.ivay.ivay_repository.model.Role">
        select * from sys_role t
        <include refid="list_condition"/>
        ${params.orderBy}
        <if test="offset != null and offset >= 0 and limit != null and limit >= 0">
            limit #{offset}, #{limit}
        </if>
    </select>

    <insert id="saveRolePermission">
        insert into sys_role_permission(roleId, permissionId) values
        <foreach collection="permissionIds" item="permissionId"
                 separator=",">
            (#{roleId}, #{permissionId})
        </foreach>
    </insert>

</mapper>